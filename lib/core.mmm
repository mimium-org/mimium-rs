include("math.mmm")

fn mix(gain,a,b){
    gain*a + (1.0-gain)*b
}
fn switch(gate,a,b){
    let gain = if (gate>0.0) 1.0 else 0.0
    mix(gain,a,b)
}

fn midi_to_hz(note){
    440.0*(2.0^ ((note-69.0)/12.0) )
}

fn hz_to_midi(freq){
    12.0*log2(freq/440.0) + 69.0
}

fn dbtolinear(x){
    pow(10.0, x/20.0)
}

fn linear2db(g) {
    20.0*log10(g)
}

#stage(macro)
fn split_tail(arr){
    let rest = [arr[0], arr[1], arr[2]]
    let tail = arr[3]
    (rest, tail)
}
